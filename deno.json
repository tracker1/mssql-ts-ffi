{
  "nodeModulesDir": "auto",
  "workspace": [
    "projects/mssql"
  ],
  "tasks": {
    "test": "deno test --allow-env projects/",
    "test:core": "deno test --allow-env projects/mssql/core/",
    "test:integration": "MSSQL_TEST_ENABLED=1 deno test --allow-env --allow-net --allow-ffi --allow-read projects/test/integration/deno/",
    "docs:api": "deno run -A npm:typedoc",
    "docs:dev": "deno task docs:api && deno run -A npm:vitepress dev docs",
    "docs:build": "deno task docs:api && deno run -A npm:vitepress build docs",
    "docs:preview": "deno run -A npm:vitepress preview docs"
  }
}
